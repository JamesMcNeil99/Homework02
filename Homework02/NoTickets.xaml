<Window x:Class="Homework02.NoTickets"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework02"
        mc:Ignorable="d"
        Title="NoTickets" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="txtMessage" HorizontalAlignment="Center" Height="82" Margin="0,135,0,0" Text="You haven't added any tickets to your order! Are you sure you want to quit?" TextWrapping="Wrap" VerticalAlignment="Top" Width="668" FontSize="20"/>
        <Button x:Name="btnConfirm" Content="Yes" HorizontalAlignment="Left" Height="53" Margin="66,312,0,0" VerticalAlignment="Top" Width="129" Click="btnConfirm_Click"/>
        <Button x:Name="btnCancel" Content="No" HorizontalAlignment="Left" Height="53" Margin="579,312,0,0" VerticalAlignment="Top" Width="129"/>

    </Grid>
</Window>
