<Window x:Class="Homework02.Delivery"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework02"
        mc:Ignorable="d"
        Title="Delivery" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="txtMessage" HorizontalAlignment="Center" Margin="0,145,0,0" Text="How will you get your tickets?" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24"/>
        <Button x:Name="btnEmail" Content="Email ($5.00)" HorizontalAlignment="Left" Margin="101,312,0,0" VerticalAlignment="Top" Height="62" Width="139" FontSize="16" Click="btnEmail_Click"/>
        <Button x:Name="btnTheatre" Content="At Theatre (Free)" HorizontalAlignment="Left" Margin="555,312,0,0" VerticalAlignment="Top" Height="62" Width="139" FontSize="16"/>

    </Grid>
</Window>
